<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/action_bar_dark</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidthWrapHeight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextView" parent="WrapContent">

    </style>

    <style name="BlueButton" parent="MatchWidthWrapHeight">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
